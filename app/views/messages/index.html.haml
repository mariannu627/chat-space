  .left-header
    .main
      %p.main__name username
      %ul.main__menu
        %li.main__menu-icon
          = link_to"#", class: "main__menu-icon--edit" do
            = fa_icon 'edit'
        %li.main__menu-icon
          = link_to"#", class: "main__menu-icon--cog" do
            = fa_icon 'cog'

  .left-body
    = render partial: "group"

.chat-right-side
  .right-header
    .header-title
      %h1.group-name ここにもgroup-name
      %ul.member member :
      = render partial: "member"
    .edit-group
      %a{ :href => 'http://google.co.jp', :class => 'edit-btn' }