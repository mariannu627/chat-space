.chat-left-side
  .left-header
    .main
      %p.main__name
        = current_user.name
      %ul.main__menu
        %li.main__menu-icon
          = link_to new_group_path, class: "main__menu-icon--edit" do
            = fa_icon 'edit'
        %li.main__menu-icon
          = link_to  edit_user_path(current_user), class: "main__menu-icon--cog" do
            = fa_icon 'cog'
          
  .left-body
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group" do
          .group__name
            = group.name
          .group__message
            - if group.messages.last.content.present?
              = group.messages.last.content
            - elsif group.messages.last.image.present?
              画像が投稿されています
            - else
              メッセージはまだありません
  