.chat-right-side
  .right-header
    .header-title
      %h1.group-name group-name
      %ul.member member :
    .edit-group
      = link_to 'http://google.co.jp', :class => 'edit-btn' do
        Edit

  .right-body
    .messages
      = render @messages

  .right-bottom
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'input-form', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: '' do
            = fa_icon 'image' 
            = f.file_field :image, class: 'input-box-text'
        = f.submit :Send, class: 'input-box-image'